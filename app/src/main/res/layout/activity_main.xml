<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/background">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_centerInParent="true">

        <ImageView
            android:id="@+id/img_dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/img_dice"
            android:padding="@dimen/padding_dice1"
            android:src="@drawable/dice1"
            tools:src="@drawable/dice1" />

        <ImageView
            android:id="@+id/img_dice1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:contentDescription="@string/img_dice"
            android:padding="@dimen/padding_dice2"
            android:src="@drawable/dice3"
            tools:src="@drawable/dice3" />

    </LinearLayout>



    <Button
        android:id="@+id/button_dice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_btn"
        android:text="@string/str_btn" />
</RelativeLayout>